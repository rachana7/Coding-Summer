#include <iostream>
#include<vector>
using namespace std;

int main() {
    vector<int> a;
    int T,i,j,k,f,n;
    cin>>T;
   // cout<<"hey ssup";
    for(i=0;i<T;i++)
    {
        cin>>n>>f;
        int count=0;
      //  cout<<"hello world";
        a.resize(n);
        for(j=0;j<n;j++)
        {
            cin>>a[j];
        }
        for(k=0;k<n;k++)
        {
            if(a[k]==f)
            {
                count=1;
                cout<<k+1<<endl;
                break;
            }
        }
        if(count==0)
        cout<<-1<<endl;
        
        
    }
	//code
	return 0;
}
